  }
</style>

<script>
  $(function(){
    $('div.post h3').each(
      function(i) {
        $(this).wrap('<a>').parent().attr({'id':i, 'href':'#post-title'});
        $('<li><a href="#'+i+'">'+$(this).text()+'</a></li>').appendTo($('#toc'))
        console.log($(this).text());
      }
    );
  });
</script>

